<assembly>
    <!-- Dependent projects will use this id as the classifier to match this assembly -->
    <id>libs</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/usrsctp_cmake/install/lib</directory>
            <includes>
                <include>*.lib</include>
                <include>*.a</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/usrsctp_cmake/install/include</directory>
            <includes>
                <include>*.h</include>
            </includes>
            <outputDirectory>include</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>