<assembly>
    <!-- Dependent projects will use this id as the classifier to match this assembly -->
    <id>libs</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>usrsctp_cmake/bin</directory>
            <includes>
                <include>*.lib</include>
                <include>*.a</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>usrsctp_cmake/bin/RelWithDebInfo</directory>
            <includes>
                <include>*.lib</include>
                <include>*.a</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>usrsctp/usrsctplib</directory>
            <includes>
                <include>**/*.h</include>
            </includes>
            <outputDirectory>include</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>